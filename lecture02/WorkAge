import java.util.Scanner;

public class WorkAge {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int age = input.nextInt();
        if (age >= 16) {

            System.out.println("Congratulations! You are able to work, because you are " + age + " years old.");
        }
        else {
            System.out.println("Don't rush you have more time for relax.");
        }
        input.close();
    }
}
